export OPENAI_API_KEY="..."

# 以下是设置连接的数据库信息

export ASTRA_DB_APPLICATION_TOKEN="AstraCS:..."  #验证访问 Astra 数据库的权限
export ASTRA_DB_KEYSPACE="..."                   #keyspace 类似于数据库的命名空间，包含了数据库表
export ASTRA_DB_ID="12345678-"                   #Astra 数据库实例的唯一标识符（ID）

